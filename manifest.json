{
  "manifest_version": 3,
  "name": "Smart Tab Organizer",
  "version": "1.0.0",
  "description": "Automatically categorize and organize your browser tabs for better productivity",
  
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "sidePanel"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_title": "Smart Tab Organizer"
  },
  
  "side_panel": {
    "default_path": "sidebar.html"
  }
}